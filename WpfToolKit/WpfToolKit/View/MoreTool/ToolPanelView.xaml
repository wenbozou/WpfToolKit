<UserControl x:Class="WpfToolKit.View.MoreTool.ToolPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfToolKit.View.MoreTool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=ToolPanelVm}">
    <Grid>
        <TextBlock Text="{Binding Introduce}"/>
        <TextBlock
            Margin="0,50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
                                FontWeight="Bold"
                                LineHeight="14"
                                Text="{Binding Introduce}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
        <Border Margin="0 100 0 0" Width="100" Height="100" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.12" Direction="0" ShadowDepth="0" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="hellow World"/>
            </Grid>
        </Border>
                
                                
    </Grid>
</UserControl>
