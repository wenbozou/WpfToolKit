<Page x:Class="WpfToolKitTest.View.MoreTools.MoreToolsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfToolKitTest.View.MoreTools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MoreToolsView">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WpfToolKitTest;component/Themes/Styles/ComboBoxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <ComboBox Name="myCbb" Width="240" Height="20" Style="{StaticResource Style.App.ComboBox}" DisplayMemberPath="Name" SelectedValuePath="ID" SelectedIndex="0" 
                  ItemsSource="{Binding CbbDatas}"/>
            <Button Content="Add" Height="20" Command="{Binding AddItemCommand, Mode=OneWay}"/>
        </StackPanel>

    </Grid>
</Page>
